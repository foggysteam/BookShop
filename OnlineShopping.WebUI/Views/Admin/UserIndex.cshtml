@model IEnumerable<OnlineShopping.Domain.Entities.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Users</h2>

<p>
    
    <a href="@Url.Action("CreateUser")" style="color:#0D3C6F; text-decoration:none;"><i class="fa fa-plus-square" aria-hidden="true"></i> Add a new User</a>
</p>
<table id="example" class="table display table-striped table-condensed table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>

                @using (Html.BeginForm("DeleteUser", "Admin"))
                {
                    @Html.Hidden("UserId", item.UserId)
                    <button class="btn" type="submit"><i class="fa fa-trash-o" aria-hidden="true" style="color:#EC0229;"></i></button>
                }
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Admin Control Panel", "Index")
</div>
