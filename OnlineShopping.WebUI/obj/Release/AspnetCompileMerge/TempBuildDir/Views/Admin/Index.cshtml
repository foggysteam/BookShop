@model IEnumerable<OnlineShopping.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container" style="text-shadow: none;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div>
                All Books
                <a href="@Url.Action("Create")" class="pull-right" style="color:#0D3C6F; text-decoration:none;"><i class="fa fa-plus-square" aria-hidden="true"></i> Add a new Book</a>
            </div>
        </div>
        <div class="panel-body">
            <table id="example" class="table display table-striped table-condensed table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-right">ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th class="text-right">Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-right" style="vertical-align:middle;">@item.productId</td>
                            <td style="vertical-align:middle;">@Html.ActionLink(item.name, "Edit", new { item.productId }, new { @title = "Click to Edit", @class = "btn dropdown-toggle" })</td>
                            <td>@item.description</td>
                            <td>@item.category</td>
                            <td class="text-right" style="vertical-align:middle;">@item.price.ToString("c")</td>
                            <td class="text-center" style="vertical-align:middle;">
                                @using (Html.BeginForm("Delete", "Admin"))
                                {
                                    @Html.Hidden("productId", item.productId)
                                    @*<input type="submit" class="btn btn-default wBtn btn-xs" value="Delete" />*@
                                    <button class="btn" type="submit"><i class="fa fa-trash-o" aria-hidden="true" style="color:#EC0229;"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                
            </table>
        </div>
        <div class="panel-footer">
            @*@Html.ActionLink("Add a New Product", "Create", null, new { @class = "btn btn-default" })*@
            <a href="@Url.Action("Create")" style="color:#0D3C6F; text-decoration:none;"><i class="fa fa-plus-square" aria-hidden="true"></i> Add a new Book</a>

        </div>
    </div>
</div>
